<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <environment include="Development">
        <link rel="stylesheet" href="/assets/css/stylesheet.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="/assets/css/stylesheet.min.css" />
    </environment>
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <title>@ViewBag.Title</title>
</head>
<body d-flex flex-column h-100>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @(ViewBag.Title=="Home" ? "active" : "")">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @(ViewBag.Title=="List of Events" ? "active" : "")">
                    @Html.ActionLink("Events", "Event", "Home", new object { }, new { @class = "nav-link" })
                    @*<a class="nav-link" href="#">Events <span class="sr-only">(current)</span></a>*@
                </li>
            </ul>
        </div>
    </nav>
    <main role="main">
        <div class="jumbotron">
            <div class="container">
                <img src="/assets/img/logo.png" alt="Logo" class="logo" />
                @RenderSection("Heading", true)
            </div>
        </div>
    </main>
    <div>
        @RenderBody()
    </div>
    <script src="/assets/js/jquery-3.3.1.slim.min.js"></script>
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //$("#navbar ul li:first").addClass('active');
            $("#navbar ul li").click(function () {
                $("#navbar ul li").removeClass('active');
                console.log($(this));
                $(this).addClass('active');
                console.log($(this));

            });
        });
    </script>
</body>
</html>
